@model IEnumerable<Lab_04_ED.Models.DesarolladoresInf>

@{
    ViewData["Title"] = "EscogerDesarrollador";
}

<h1>Escoger Desarrollador</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (DesarolladoresInf item in ViewBag.Desarrolladores)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.ActionLink("Ver Tarea", "VerTarea", new { idDV = item.Id }) 
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-outline-info" asp-action="Principal">Regresar</a>
</div>
@TempData["Mensaje"]
